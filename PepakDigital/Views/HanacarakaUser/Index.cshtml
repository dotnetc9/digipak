@model IEnumerable<PepakDigital.Hanacaraka>
@{
    ViewBag.Title = "Hanacaraka";
    Layout = "~/Views/Shared/_LayoutwithSidebar.cshtml";
}

<br />
<div class="col-lg-15">
        <div class="panel panel-primary">
			<div class="panel-heading"><center><h4>Hanacaraka</h4></center></div>
			<div class="panel-body">
				<table class="table table-striped table-hover">
				<thead>
					<tr><th>Hanacaraka</th><th>Gambar</th></tr>
				</thead>
				<tbody>
					@foreach (var item in Model) {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Aksara)
                            </td>
                            <td>
                                <img alt="Gambar" src= "@string.Format("{0}",item.GambarURL)" />
                            </td>
                        </tr>
                    }
				</tbody>
				</table>
                </div>
		</div><!--/panel-body-->
</div><!--/panel-->