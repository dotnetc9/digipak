@model PepakDigital.Hanacaraka

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Hanacaraka</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.HanacarakaId)

        <div class="form-group">
            @Html.LabelFor(model => model.Aksara, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Aksara)
                @Html.ValidationMessageFor(model => model.Aksara)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.GambarURL, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.GambarURL)
                @Html.ValidationMessageFor(model => model.GambarURL)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.KategoriId, "KategoriId", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("KategoriId", String.Empty)
                @Html.ValidationMessageFor(model => model.KategoriId)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
